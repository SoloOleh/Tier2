# .env.example

# --- App ---
APP_NAME=Contacts API
BASE_URL=http://127.0.0.1:8000
ENV=dev

# --- Security / JWT ---
JWT_SECRET=change_me_please
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=60

# --- DB ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=contacts_db
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/contacts_db

# --- Redis (для rate limit) ---
REDIS_HOST=redis
REDIS_PORT=6379
RATE_LIMIT_PER_MINUTE=5

# --- Email verification ---
REQUIRE_VERIFIED_FOR_LOGIN=false

# --- SMTP (опційно; якщо не задано — відправка емейлу буде злогована) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# --- CORS (кома-розділений список або порожньо = "*") ---
# --- Cloudinary ---
# Prefer single URL if you have it (Heroku-style):
# CLOUDINARY_URL=cloudinary://<API_KEY>:<API_SECRET>@<CLOUD_NAME>
CLOUDINARY_URL=cloudinary://119398176467612:09g2SE1xl9OzU1AZsh35lPvOOWM@dgjxkb0ya

# Or use separate credentials (these are ignored if CLOUDINARY_URL is set):
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Optional target folder for uploads (keeps media organized)
CLOUDINARY_FOLDER=contacts-avatars

# --- CORS (кома-розділений список або порожньо = "*") ---
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000